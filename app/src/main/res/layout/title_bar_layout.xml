<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_title"
    android:background="@color/write"
    android:paddingTop="@dimen/main_title_padding">

    <RelativeLayout
        android:id="@+id/rl_title_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_title_bar_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_bar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title_bar_left_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rl_title_bar_left"
        android:textColor="@color/yellow"
        android:layout_marginLeft="6dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/ll_title_bar_middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_bar_middle_text"
            style="@style/black_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:maxEms="13"
            android:ellipsize="end"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_title_bar_middle_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_title_bar_middle_texttwo"
            style="@style/blue_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:visibility="gone" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_title_bar_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_bar_right_text"
            style="@style/black_little_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="gone" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_title_bar_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/rl_title_bar_left"
        android:background="@drawable/top_title_btn" />

    <FrameLayout
        android:id="@+id/fl_title_bar_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/rl_title_bar_right"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_title_btn" />

    <View
        android:id="@+id/devide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>