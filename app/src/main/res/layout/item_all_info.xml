<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/write">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_5_14sp"
            android:layout_centerVertical="true"
            android:text="姓名:"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_6_11sp"
            android:layout_toRightOf="@+id/nametxt"
            android:maxLength="10"
            android:layout_centerVertical="true"
            android:text="小明"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/FontStyleNormalGrayMiddle"
            android:layout_centerVertical="true"
            android:text="2010-10-10"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/addresstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_5_14sp"
            android:text="住址:"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_6_11sp"
            android:layout_toRightOf="@+id/addresstxt"
            android:text="地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/districttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_5_14sp"
            android:layout_centerVertical="true"
            android:text="县分:"/>
        <TextView
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_6_11sp"
            android:layout_toRightOf="@+id/districttxt"
            android:maxLength="20"
            android:layout_centerVertical="true"
            android:text="县分县分县分县分县分县分县分县分县分"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/publishertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_5_14sp"
            android:layout_centerVertical="true"
            android:text="发布者:"/>
        <TextView
            android:id="@+id/publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_low_6_11sp"
            android:layout_toRightOf="@+id/publishertxt"
            android:maxLength="20"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:text="发布者发布者发布者发发布者布者发布者发布者发布者发布者发布者发布者"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line_share_thump"/>
</LinearLayout>
