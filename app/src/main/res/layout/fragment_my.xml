<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg">

    <cn.xll.com.ui.widget.TitleBarView
        android:id="@+id/titleBar_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/write">
        <cn.xll.com.ui.widget.CircularImage
            android:id="@+id/civ_my_avator"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_avatar_default"
            android:layout_marginLeft="15dp"/>
        <TextView
            style="@style/FontStyleNormalBlackMid"
            android:id="@+id/tv_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="37dp"
            android:layout_toRightOf="@+id/civ_my_avator"
            android:text=""/>
        <TextView
            style="@style/FontStyleNormalBlackMid"
            android:id="@+id/tv_my_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="47dp"
            android:textColor="@color/black_low_4"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/civ_my_avator"
            android:maxLines="2"
            android:visibility="gone"
            android:text=""/>
        <ImageView
            android:id="@+id/iv_my_edit_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="44dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_sign"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#efefef"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#efefef"/>
    <RelativeLayout
        android:id="@+id/rel_my_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/write">
        <TextView
            style="@style/FontStyleNormalBlackMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/ic_my_share"
            android:drawablePadding="15dp"
            android:text="修改密码"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/ic_next"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_exit"
        style="@style/FontStyleNormalWhiteMid"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/exit_login"
        android:background="@drawable/select_login_ensure"/>
</LinearLayout>
