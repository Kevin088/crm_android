<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="#ececec"
                android:centerY="0.75"
                android:endColor="#ececec"
                android:startColor="#ececec" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="#ececec"
                    android:centerY="0.75"
                    android:endColor="#ececec"
                    android:startColor="#ececec"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="@color/green_1"
                    android:centerY="0.75"
                    android:endColor="@color/green_1"
                    android:startColor="@color/green_1" />
            </shape>
        </clip>
    </item>

</layer-list>